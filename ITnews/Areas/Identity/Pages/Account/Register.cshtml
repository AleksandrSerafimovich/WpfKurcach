@page
@model RegisterModel

@{
    ViewData["Title"] = "Register"; 
}

<h2><localize>Регистрация</localize></h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4><localize>Создайте новый аккаунт.</localize></h4>
            <hr />
            <div localize asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label localize asp-for="Input.UserName"></label>
                <input localize asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label localize asp-for="Input.Email"></label>
                <input localize asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label localize asp-for="Input.Password"></label>
                <input localize asp-for="Input.Password" class="form-control" />
                <span localize asp-validation-for="Input.Password" resource-name="Register" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label localize asp-for="Input.ConfirmPassword"></label>
                <input localize asp-for="Input.ConfirmPassword" class="form-control" />
                <span localize asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default" localize>Регистрация</button>
        </form>
    </div>
</div>
